@model CMSMvc.Models.Article

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <div id="editor" style="height: 400px; overflow-y: auto; border: 1px solid #ddd;"></div>
                <input type="hidden" asp-for="Content" id="ContentInput" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <!-- CreatedAt, UpdatedAt, and AuthorId are managed by the controller -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Initialize Quill editor
        const quill = new Quill('#editor', {
            theme: 'snow',
            modules: {
                toolbar: [
                    ['bold', 'italic', 'underline', 'strike'],
                    ['blockquote', 'code-block'],
                    [{ 'header': 1 }, { 'header': 2 }],
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    [{ 'script': 'sub'}, { 'script': 'super' }],
                    [{ 'indent': '-1'}, { 'indent': '+1' }],
                    [{ 'size': ['small', false, 'large', 'huge'] }],
                    [{ 'header': [1, 2, 3, 4, 5, 6, false] }],
                    [{ 'color': [] }, { 'background': [] }],
                    [{ 'align': [] }],
                    ['link', 'image'],
                    ['clean']
                ]
            }
        });

        // Load existing content into editor
        const contentInput = document.querySelector('input[name="Content"]');
        if (contentInput && contentInput.value) {
            quill.root.innerHTML = contentInput.value;
        }

        // Function to capture Quill content and update hidden input
        function syncQuillToInput() {
            const input = document.querySelector('input[name="Content"]');
            if (input) {
                input.value = quill.root.innerHTML;
            }
        }

        // Sync content in real-time as user types
        quill.on('text-change', function() {
            syncQuillToInput();
        });

        // Also sync before form submission
        document.querySelector('form').addEventListener('submit', function(e) {
            syncQuillToInput();
            // Validate that content is not empty
            const input = document.querySelector('input[name="Content"]');
            if (!input.value.trim() || input.value === '<p><br></p>') {
                e.preventDefault();
                alert('Content cannot be empty');
                return false;
            }
        });
    </script>
}
